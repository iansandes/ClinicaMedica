@model ClinicaMedica.ViewModels.PacienteViewModel
@{
    ViewBag.Title = "Cadastrar Paciente";
}

<h2>Cadastrar Paciente</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.Nome)
        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })

    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Idade)
        @Html.EditorFor(model => model.Idade, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group form-check">
        @Html.LabelFor(model => model.DataNascimento)
        @Html.EditorFor(model => model.DataNascimento, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group form-check">
        @Html.LabelFor(model => model.Sexo)
        @Html.EditorFor(model => model.Sexo, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group form-check">
        @Html.LabelFor(model => model.Telefone)
        @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <button type="submit" class="btn btn-primary">Cadastrar</button>
}

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}