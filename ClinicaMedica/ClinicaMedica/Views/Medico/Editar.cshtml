@model ClinicaMedica.ViewModels.MedicoViewModel
@{
    ViewBag.Title = "Editar Médico";
}

<h2>Editar Médico</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.Nome)
        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })

    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Idade)
        @Html.EditorFor(model => model.Idade, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group form-check">
        @Html.LabelFor(model => model.DataNascimento)
        @Html.EditorFor(model => model.DataNascimento, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group form-check">
        @Html.LabelFor(model => model.Especialidade)
        @Html.EditorFor(model => model.Especialidade, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group form-check">
        @Html.LabelFor(model => model.Salario)
        @Html.EditorFor(model => model.Salario, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group form-check">
        @Html.LabelFor(model => model.Telefone)
        @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
}

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}


